{
  "root": true,
  "env": {
    "es2020": true
  },
  "extends": "trybe-backend",
  "rules": {
    "sonarjs/no-duplicate-string": [
      "error",
      5
    ],
    "sonarjs/prefer-object-literal": "off",
    "mocha/no-setup-in-describe": "off",
    "indent": [
      "error",
      2
    ],
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreComments": true,
        "ignoreUrls": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["tests/**/*.test.js"],
      "rules": {
        "max-len": "off"
      }
    }
  ]
}
